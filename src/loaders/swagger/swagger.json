{
  "openapi": "3.0.0",
  "info": {
    "title": "API REST Base Repo",
    "description": "This is a base of an API to start a project",
    "contact": {
      "email": "damianagustinrz@gmail.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1",
      "description": "Development"
    },
    {
      "url": "https://node-basic-apirest.herokuapp.com/api/v1",
      "description": "Production"
    }
  ],
  "tags": [
    {
      "name": "Users",
      "description": "Operations about users"
    }
  ],
  "paths": {
    "/users/": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Get a list of all users",
        "description": "",
        "responses": {
          "200": {
            "description": "The array of users is in a JSON format.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Create a new User",
        "description": "",
        "requestBody": {
          "description": "Name of user",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created"
          }
        }
      }      
    },
    "/users/{id}": {
      "put": {
        "tags": [
          "users"
        ],
        "summary": "Update a existing User",
        "description": "",
        "parameters":[ 
          {
            "name": "id",
            "in": "path",
            "description": "The id of the user needs to be updated",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The user updated.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "users"
        ],
        "summary": "Delete a existing User by providing the id.",
        "description": "",
        "parameters":[ 
          {
            "name": "id",
            "in": "path",
            "description": "The id of the user needs to be deleted.",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User deleted"
          } 
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "required": [
          "id"
        ],
        "type": "object",
        "properties": {
          "id": {
            "description": "The user id",
            "type": "integer",
            "example": "3"
          },
          "name": {
            "description" : "The username",
            "type": "string",
            "example": "Damian Ramirez"
          }
        }
      },
      "Manufacturer": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "ACME Corporation"
          },
          "homePage": {
            "type": "string",
            "format": "url",
            "example": "https://www.acme-corp.com"
          },
          "phone": {
            "type": "string",
            "example": "408-867-5309"
          }
        }
      }
    }
  }
}